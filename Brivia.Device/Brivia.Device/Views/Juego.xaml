<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Brivia.Device.Views.Juego">
    <ContentPage.Content>
        <StackLayout Margin="10,5,10,10" Padding="10" x:Name="myBtns">
            <!--Title-->
            <Label Text="Game"
               x:Name="Title"
               HorizontalOptions="Center"
               FontSize="32"
               FontAttributes="Bold"
               TextColor="Black" />

            <!--Grid Buttons-->
            <Grid>
                <StackLayout x:Name="MyButtons"/>
               
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>